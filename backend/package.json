{
  "name": "jewelry-inventory-backend",
  "version": "1.0.0",
  "description": "Backend API for jewelry inventory management system",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:connection": "tsx src/db/connection.ts",
    "db:test": "tsx src/db/test-connection.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:studio": "drizzle-kit studio",
    "setup": "npm install && npm run db:generate"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "drizzle-orm": "^0.32.2",
    "postgres": "^3.4.4",
    "@types/pg": "^8.11.6",
    "zod": "^3.23.8",
    "jose": "^5.6.3",
    "argon2": "^0.41.1",
    "multer": "^1.4.5-lts.1",
    "@types/multer": "^1.4.11",
    "ioredis": "^5.4.1",
    "@types/ioredis": "^5.0.0",
    "sharp": "^0.33.4",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/auto-instrumentations-node": "^0.47.1",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@opentelemetry/exporter-jaeger": "^1.25.1",
    "@opentelemetry/api": "^1.9.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "tsx": "^4.16.2",
    "tsc-alias": "^1.8.10",
    "@types/node": "^20.14.12",
    "vitest": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.4",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.7.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.3.3",
    "drizzle-kit": "^0.23.2",
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module"
}
