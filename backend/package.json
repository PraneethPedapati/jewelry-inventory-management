{
  "name": "jewelry-inventory-backend",
  "version": "1.0.0",
  "description": "Backend API for jewelry inventory management system",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:connection": "tsx src/db/connection.ts",
    "db:test": "tsx src/db/test-connection.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:enhanced": "tsx src/db/seed-enhanced.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:studio": "drizzle-kit studio",
    "setup": "npm install && npm run db:generate"
  },
  "dependencies": {
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/ioredis": "5.0.0",
    "@types/multer": "1.4.11",
    "@types/pg": "8.11.6",
    "argon2": "0.41.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.32.2",
    "express": "4.19.2",
    "express-rate-limit": "7.1.5",
    "helmet": "7.1.0",
    "ioredis": "5.4.1",
    "jose": "5.6.3",
    "multer": "1.4.5-lts.1",
    "sharp": "0.33.4",
    "zod": "3.23.8",
    "zod-express-middleware": "1.4.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "20.14.12",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@types/exceljs": "^1.3.0",
    "@typescript-eslint/parser": "8.0.0",
    "@vitest/coverage-v8": "2.0.4",
    "drizzle-kit": "0.23.2",
    "eslint": "9.7.0",
    "nodemon": "3.1.4",
    "prettier": "3.3.3",
    "supertest": "7.0.0",
    "tsc-alias": "1.8.10",
    "tsx": "4.16.2",
    "typescript": "5.5.4",
    "vitest": "2.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module"
}
